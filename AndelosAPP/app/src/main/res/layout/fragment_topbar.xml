<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/height_AppBar"
    android:layout_width="match_parent"
    android:background="@drawable/topbar"
    android:elevation="7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/lyt_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >
            <Button
                android:id="@+id/btn_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/checkout"/>
            <TextView
                android:id="@+id/badge_checkout"
                android:layout_width="@dimen/width_badge"
                android:layout_height="@dimen/width_badge"
                android:layout_alignTop="@id/btn_checkout"
                android:layout_alignRight="@id/btn_checkout"
                android:textSize="@dimen/PrimaryFontSize"
                android:background="@drawable/badge_circle"
                android:visibility="invisible"
                android:textColor="@color/UserFontColor"
                android:gravity="center"/>
        </RelativeLayout>






        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/txt_AppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/AppbarFontSize"
            android:textColor="@color/AppFontColor"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/login"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/txt_welcome"
            android:layout_width="@dimen/welcomeString"
            android:layout_height="50dp"
            android:text="Hi Sinaafdasdfasd!"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@color/UserFontColor"
            android:textSize="@dimen/PrimaryFontSize"
            android:visibility="invisible"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>

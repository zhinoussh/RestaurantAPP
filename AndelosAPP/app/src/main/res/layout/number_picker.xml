<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/btn_decrement_order"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/decrement"/>

    <TextView
        android:id="@+id/txt_orderNum"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="@dimen/PrimaryFontSize"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_increment_order"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/increment"/>


</LinearLayout>